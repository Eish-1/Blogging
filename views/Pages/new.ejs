<% layout("./layout/boilerplate.ejs") %>

<body>
    <h1><i>Writing Section</i></h1>

    <form method="post" action="/home">
        <p>User:</p>
        <input name="blogpost[username]" type="text" placeholder="Enter username" >
        <p>Image:</p>
        <input name="blogpost[picture]" type="text" placeholder="Enter url" >
        <p>Title:</p>
        <input name="blogpost[title]" type="text" placeholder="Enter Title" >
        <p>Body: </p>
        <textarea name="blogpost[blogmat]" id="" cols="30" rows="10"></textarea>
        <p>Time: </p>
        <input name="blogpost[dateTime]" type="text" value="<%= now  %>">
        <br><br>
        <button>submit</button>
    </form>
</body>